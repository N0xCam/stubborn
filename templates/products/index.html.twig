{% extends 'base.html.twig' %}

{% block title %}Nos Sweat-shirts{% endblock %}

{% block body %}
<div class="shop-container">
    <aside class="filters">
        <h3>Fourchette de prix</h3>
        <ul class="price-list">
            <li><a href="{{ path('app_products', {'price_range': '10_29'}) }}"
                   class="{{ selected == '10_29' ? 'selected' : '' }}">10 à 29 €</a></li>
            <li><a href="{{ path('app_products', {'price_range': '30_35'}) }}"
                   class="{{ selected == '30_35' ? 'selected' : '' }}">30 à 35 €</a></li>
            <li><a href="{{ path('app_products', {'price_range': '35_50'}) }}"
                   class="{{ selected == '35_50' ? 'selected' : '' }}">35 à 50 €</a></li>
        </ul>
    </aside>

    <section class="product-grid">
        {% for product in products %}
            <div class="product-card-list">
                <img src="{{ asset('uploads/images/' ~ product.image) }}" alt="{{ product.name }}">
                <p><strong>{{ product.name }}</strong></p>
                <p>{{ product.price }} €</p>
                {% if app.user %}
                    <a href="{{ path('app_product_show', {id: product.id}) }}" class="voir-btn">VOIR</a>
                {% endif %}
            </div>
        {% else %}
            <p>Aucun produit trouvé.</p>
        {% endfor %}
    </section>
</div>
{% endblock %}
