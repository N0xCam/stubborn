{% extends 'base.html.twig' %}

{% block title %}Back-office ‚Äì Produits{% endblock %}

{% block body %}
    <h1>Back-office ‚Äì Gestion des produits</h1>

    <a href="{{ path('app_product_new') }}" class="add-button">‚ûï Ajouter un nouveau produit</a>

    <table class="product-table">
        <thead>
            <tr>
                <th>Image</th>
                <th>Nom</th>
                <th>Prix (‚Ç¨)</th>
                <th>XS</th>
                <th>S</th>
                <th>M</th>
                <th>L</th>
                <th>XL</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td><img src="{{ asset('uploads/images/' ~ product.image) }}" alt="{{ product.name }}" width="80">
</td>
                <td>{{ product.name }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.stockXS }}</td>
                <td>{{ product.stockS }}</td>
                <td>{{ product.stockM }}</td>
                <td>{{ product.stockL }}</td>
                <td>{{ product.stockXL }}</td>
                <td class="actions">
                    <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="edit-button">‚úèÔ∏è Modifier</a>
                    <form method="post" action="{{ path('app_product_delete', {'id': product.id}) }}" onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer ce produit ?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                    <button class="delete-button">üóëÔ∏è Supprimer</button>
                    </form>

                </td>
            </tr>
        {% else %}
            <tr><td colspan="9">Aucun produit</td></tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
