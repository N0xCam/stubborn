{% extends 'base.html.twig' %}

{% block body %}
<h1>Nos sweat-shirts</h1>

{{ form_start(form) }}
    {{ form_row(form.priceRange) }}
    <button type="submit">Filtrer</button>
{{ form_end(form) }}

<div class="product-list">
    {% for product in products %}
        <div class="product-card">
            <img src="{{ asset('uploads/images/' ~ product.image) }}" alt="{{ product.name }}" width="200">
            <h2>{{ product.name }}</h2>
            <p>{{ product.price }} €</p>
            <a href="{{ path('app_product_show', {'id': product.id}) }}">Voir</a>
        </div>
    {% else %}
        <p>Aucun produit ne correspond à ce filtre.</p>
    {% endfor %}
</div>
{% endblock %}
