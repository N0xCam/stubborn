{% extends 'base.html.twig' %}

{% block title %}Accueil - Stubborn{% endblock %}

{% block body %}
    <h1>Bienvenue chez Stubborn</h1>

    {% if app.user %}
        <nav>
            <a href="{{ path('app_home') }}">Accueil</a> |
            <a href="#">Boutique</a> |
            <a href="#">Panier</a> |
            <a href="{{ path('app_logout') }}">Se déconnecter</a>
        </nav>
    {% else %}
      
    {% endif %}

    <section class="featured-products">
        <h2>Nos modèles phares</h2>
        <div class="products">
            {% for product in products %}
                <div class="product-card">
                    <img src="{{ product.image }}" alt="{{ product.name }}" width="200">
                    <h3>{{ product.name }}</h3>
                    <p>{{ product.price }} €</p>
                    <a href="{{ path('app_product_show', { id: product.id }) }}">Voir le produit</a>
                </div>
            {% endfor %}
        </div>
    </section>

    <section class="about">
        <h2>Qui sommes-nous ?</h2>
        <p>
            Stubborn est une marque fière, indépendante et stylée. Nous créons des sweats uniques, pour les esprits libres qui n'ont pas peur d'affirmer leur caractère.
        </p>
    </section>
{% endblock %}
