{% extends 'base.html.twig' %}

{% block title %}Accueil - Stubborn{% endblock %}

{% block body %}
<div class="home-container">
    <section class="hero-home">
        <h1>Bienvenue chez <strong>Stubborn</strong></h1>
        <p class="subtitle-home">
            Des sweats qui affirment ta personnalité.<br>
            Éthiques, durables, sans compromis sur le style.
        </p>
        <a href="{{ path('app_products') }}" class="cta-home">Découvrir la collection</a>
    </section>

    <section class="section-featured-home">
        <h2 class="title-home">Nos modèles phares</h2>

        <div class="featured-products-home">
            {% for product in products %}
                <div class="product-card-home">
                    <img src="{{ asset('uploads/images/' ~ product.image) }}" alt="{{ product.name }}">
                    <div class="product-name-home">{{ product.name }}</div>
                    <div class="product-price-home">{{ product.price }} €</div>
                    {% if app.user %}
                        <a href="{{ path('app_product_show', {id: product.id}) }}" class="voir-button-home">VOIR</a>
                    {% endif %}
                </div>
            {% else %}
                <p>Aucun produit mis en avant pour le moment.</p>
            {% endfor %}
        </div>
    </section>
</div>
{% endblock %}
